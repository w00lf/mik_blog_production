<legend><%= t('.login') %></legend>
<%=form_for(resource, :as=>resource_name, :url => session_path(resource_name), :html => { :class => "form-inline"}) do |f| %>
	<p>
		<%=f.text_field(:email, :placeholder=>t("helpers.placeholder.user.email"), :class=>"input-medium") %>
	</p>
	<span> 
		<%=f.password_field(:password, :placeholder=>t("helpers.placeholder.user.password"), :class=>"input-medium") %>
	</p>
	<% if devise_mapping.rememberable? %>
	<p>
		<label class="checkbox">
			<%=  f.check_box :remember_me %>
			<%=  f.label :remember_me %>
		</label>
	</p>
	<% end %>
	<p>
	<%=  f.submit( t('.login'), :class=>"btn", :id=>'login_site') %>
</p>
<% end %>
<%= render "devise/shared/links" %>

