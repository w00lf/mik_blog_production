<% if notice %>
 	<div class="alert alert-info">
        <a class="close" data-dismiss="alert">×</a>
        <span>
            <%= notice %>
        </span>
  	</div>
<% end %>
<% if alert %>
	<div class="alert alert-error">
        <a class="close" data-dismiss="alert">×</a>
        <span>
        	<%= alert %>
       	</span>
  	</div>
<% end %>

